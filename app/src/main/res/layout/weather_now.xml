<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@color/weather_item_background"
    >


    <TextView
        android:id="@+id/degree_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/user"
        android:layout_margin="15dp"
        android:textColor="@color/font_white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/weather_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/user"
        android:textColor="@color/font_white"
        android:textSize="20sp"
        android:layout_alignEnd="@id/degree_text"
        android:layout_alignRight="@id/degree_text"
        android:layout_below="@id/degree_text"
        android:layout_marginTop="10dp"
        android:layout_margin="15dp"
        />

    <TextView
        android:id="@+id/title_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/weather_info_text"
        android:text="@string/user"
        android:textColor="@color/font_white"
        android:textSize="16sp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"/>
</RelativeLayout>